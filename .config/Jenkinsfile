pipeline {
    agent any

    environment {
        ARTIFACT_NAME = 'Netin-artifact'  // Usa el nombre del artefacto que desees
    }

    options {
        timestamps()
        ansiColor('xterm')
    }

    tools {
        nodejs '20.11.1'  // Asegúrate de tener esta versión o la correcta configurada en Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Install Dependencies with devDependencies') {
            steps {
                sh 'yarn install'
            }
        }

        stage('Change Version Tags') {
            steps {
                sh '''
                VERSION=$(git rev-parse --short HEAD)
                # Modificar el archivo package.json o artifact.dna con el nuevo número de versión.
                jq '.version = "${VERSION}"' package.json > temp.json && mv temp.json package.json
                '''
            }
        }

        stage('Build Artifact') {
            steps {
                sh 'yarn run build:production'
            }
        }

        stage('Install Production Dependencies') {
            steps {
                sh 'yarn install --production'
            }
        }

        stage('Prepare Artifacts') {
            matrix {
                axes {
                    axis {
                        name 'PLATFORM'
                        values 'linux', 'windows'
                    }
                }
                stages {
                    stage('Copy node_modules') {
                        steps {
                            script {
                                if (isUnix()) {
                                    sh '''
                                    mkdir -p artifacts/${PLATFORM}/node_modules
                                    cp -r node_modules/* artifacts/${PLATFORM}/node_modules/
                                    '''
                                } else {
                                    bat '''
                                    mkdir artifacts\\${PLATFORM}\\node_modules
                                    xcopy /E /I node_modules\\* artifacts\\${PLATFORM}\\node_modules\\
                                    '''
                                }
                            }
                        }
                    }

                    stage('Archive Artifacts') {
                        steps {
                            sh '''
                            mkdir -p ${ARTIFACT_NAME}
                            cd artifacts
                            zip -r ../${ARTIFACT_NAME}/${ARTIFACT_NAME}-${PLATFORM}.zip ${PLATFORM}
                            '''
                        }
                    }
                }
            }
        }

        stage('Publish Artifacts') {
            steps {
                archiveArtifacts artifacts: "${ARTIFACT_NAME}/*.zip", fingerprint: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}

