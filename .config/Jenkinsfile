pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'my-docker-image:latest'
        DOCKER_REGISTRY = 'docker.io'
        GIT_REPO = 'https://github.com/amatamarco/Jenkins.git'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: "$GIT_REPO"
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Instalar dependencias necesarias para el proyecto
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Realizar la construcción del proyecto
                    sh 'npm run build'
                }
            }
        }

        stage('Generate Release Notes') {
            steps {
                // Reemplazar por el método correcto para generar las notas de la versión
                step([
                    $class: 'XplatGenerateReleaseNotes',
                    // Aquí puedes agregar los parámetros específicos que tu tarea o plugin necesite
                ])
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Construir la imagen de Docker
                    sh 'docker build -t $DOCKER_REGISTRY/$DOCKER_IMAGE .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Iniciar sesión en Docker Registry y hacer push de la imagen
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin $DOCKER_REGISTRY'
                        sh 'docker push $DOCKER_REGISTRY/$DOCKER_IMAGE'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Llamada a los pasos para el despliegue (aquí puedes agregar tus pasos específicos)
                    echo 'Deploying application...'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment completed successfully.'
        }
        failure {
            echo 'There was an issue with the build or deployment.'
        }
    }
}
