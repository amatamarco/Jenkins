{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020.Promise", "DOM", "ES2019"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "removeComments": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "exclude": ["node_modules/**", "docs/", ".config/", ".assets/", "dist/"],
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.yml", "src/**/*.yaml", "src/**/*.json", ".config/jest.config.js"]
}
