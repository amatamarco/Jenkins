{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["ES2020.Promise", "DOM", "ES2019"],
      "types": ["jest", "node"],
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "alwaysStrict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "importHelpers": true,
      "removeComments": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "pretty": true
    },
    "include": ["src/**/*.ts", ".config/jest.config.js"]
  }